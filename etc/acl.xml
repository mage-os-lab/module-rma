<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="MageOS_RMA::rma" title="RMA" sortOrder="100">
                        <resource id="MageOS_RMA::rma_manage" title="Manage RMA Requests" sortOrder="10"/>
                        <resource id="MageOS_RMA::rma_status" title="Manage RMA Statuses" sortOrder="20"/>
                        <resource id="MageOS_RMA::rma_reason" title="Manage RMA Reasons" sortOrder="30"/>
                        <resource id="MageOS_RMA::rma_resolution_type" title="Manage RMA Resolution Types" sortOrder="40"/>
                        <resource id="MageOS_RMA::rma_item_condition" title="Manage RMA Item Conditions" sortOrder="50"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MageOS_RMA::config" title="RMA Configuration" sortOrder="100"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
